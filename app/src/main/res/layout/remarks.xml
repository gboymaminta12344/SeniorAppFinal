<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <TextView
            android:id="@+id/txtCode_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Date:    "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_display_date"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="Date Medicine Release"
            app:layout_constraintStart_toEndOf="@+id/txtCode_date"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Medicine:   "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/txtCode_date" />

        <TextView
            android:id="@+id/text_display_med_name"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:hint="Name Of Medicine"
            app:layout_constraintTop_toTopOf="@+id/medicine_name"
            app:layout_constraintStart_toEndOf="@+id/medicine_name"/>

        <TextView
            android:id="@+id/medicine_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name of Senior:   "
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/medicine_name" />

        <TextView
            android:id="@+id/text_display_medicine_note"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:hint="Notes for Medicine"
            app:layout_constraintTop_toTopOf="@+id/medicine_note"
            app:layout_constraintStart_toEndOf="@+id/medicine_note"/>

        <Button
            android:id="@+id/View_Binigay_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/medicine_note"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.cardview.widget.CardView>